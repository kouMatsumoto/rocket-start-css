@import './trim-side-hyphen';


/**
 * Function to get hyphen-case string from rest params
 *
 * param will be trimmed side hyphen, and if param is invalid string (like ''), will be ignored.
 * e.g.: 'one-string' => 'one-string'
 * e.g.: ('my' 'class' '' 'name') => 'my-class-name'
 *
 * @param {string|string[]} $args - string or string array
 * @return {string} - string that is concatenated with hyphen
 */
uc-get-valid-hyphen-case-string($args) {
  // if $args is one string
  if (length($args) < 1) {
    return $args;
  }

  $array = (); // string array which will be concatenated with '-'
  for $a in $args {
    $s = uc-trim-side-hyphen($a); // trim side hyphens and convert to string
    if ($s != '') {
      push($array, $s);
    }
  }

  return 0 < length($array) ? join('-', $array) : '';
}
