@import '../../_functions';


/**
 * Property set for flex class
 */
_uc-flex-set($basis) {
  box-sizing: border-box;
  flex: 1 1 $basis;
  max-height: 100%;
  max-width: $basis;
}


/**
 * Mixin to create classes of flex-numbers
 */
uc-flex-value($prefix = '') {
  $prefix = uc-get-prefix($prefix, 'flex');

  // flex value for multiple of 5
  for $i in 1..20 {
    $t = $i * 5;
    {uc-get-class-name($prefix, $t)} {
      _uc-flex-set($t + '%');
    }
  }

  // special value 33.33% and 66.66%
  {uc-get-class-name($prefix, 33)} {
    _uc-flex-set(33.33%);
  }
  {uc-get-class-name($prefix, 66)} {
    _uc-flex-set(66.66%);
  }

  // flex class for the rest
  {uc-get-class-name($prefix)} {
    box-sizing: border-box;
    flex: 1;
    min-width: 0;
  }
}
