@import '../../mixins';


/**
 * Mixin to create classes of font-weight
 */
rs-text-weight($prefix = '') {
  rs-generate-classes-by-option({
    prefix: ($prefix 'text-weight'),
    property: font-weight,
    data: {
      normal: normal,
      bold: bold,
      lighter: lighter,
      bolder: bolder,
      '100': 100,
      '200': 200,
      '300': 300,
      '400': 400,
      '500': 500,
      '600': 600,
      '700': 700,
      '800': 800,
      '900': 900,
    },
  });
}
