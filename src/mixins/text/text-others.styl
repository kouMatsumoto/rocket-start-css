@import '../generate/generate-classes-by-option';


/**
 * Mixin to create classes of text other classes, e.g. text-transform, text-overflow.
 */
rs-text-others($prefix = '') {
  // font-style
  rs-generate-classes-by-option({
    prefix: ($prefix 'text'),
    property: font-style,
    data: {
      normal: normal,
      italic: italic,
      oblique: oblique,
    },
  });

  // text-transform
  rs-generate-classes-by-option({
    prefix: ($prefix 'text'),
    property: text-transform,
    data: {
      capitalize: capitalize,
      lowercase: lowercase,
      uppercase: uppercase,
    },
  });

  // text-overflow
  rs-generate-classes-by-option({
    prefix: ($prefix 'text'),
    property: text-overflow,
    data: {
      clip: clip,
      ellipsis: ellipsis,
    },
  });

  // white-space
  rs-generate-classes-by-option({
    prefix: ($prefix 'text'),
    property: white-space,
    data: {
      nowrap: nowrap,
      pre: pre,
      pre-wrap: pre-wrap,
      pre-line: pre-line,
    },
  });
}
