@import '../../functions';


/**
 * Mixin to create classes of display
 */
rs-display($prefix = '') {
  $prefix = rs-get-prefix($prefix, 'layout');

  $display = {
    block: {
      display: block,
    },
    column: {
      display: flex,
      flex-direction: column,
    },
    iblock: {
      display: inline-block,
    },
    inline: {
      display: inline,
    },
    row: {
      display: flex,
      flex-direction: row,
    }
  };

  // generate classes
  for $key, $val in $display {
    {rs-get-class-name($prefix, $key)} {
      {$val}
    }
  }
}
